<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">MyDiet</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="patients" Match="NavLinkMatch.All">
                <span class="oi oi-person" aria-hidden="true"></span> Patients
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="diets">
                <span class="oi oi-list" aria-hidden="true"></span> Diets
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="meals">
                <span class="oi oi-list" aria-hidden="true"></span> Meals
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="products">
                <span class="oi oi-list" aria-hidden="true"></span> Products
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="productcategories">
                <span class="oi oi-list" aria-hidden="true"></span> Product Categories
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
